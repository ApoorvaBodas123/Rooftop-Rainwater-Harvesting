# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rainwater-harvesting
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rainwater-harvesting

# Server Configuration
PORT=5000
NODE_ENV=development

# Weather API Keys (Optional - system works without them using regional data)
# Get free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Geocoding API Keys (Optional - for better location detection)
# Get free API key from: https://opencagedata.com/api
OPENCAGE_API_KEY=your_opencage_api_key_here

# Alternative: Google Maps API (if you prefer)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here


# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=1
